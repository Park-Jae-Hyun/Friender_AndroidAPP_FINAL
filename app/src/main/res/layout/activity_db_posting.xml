                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check4" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic4"
                    android:background="@mipmap/p04coffee"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check5" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic5"
                    android:background="@mipmap/p05sports"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check6" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic6"
                    android:background="@mipmap/p06music"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check7" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic7"
                    android:background="@mipmap/p07movie"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check8" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic8"
                    android:background="@mipmap/p08photo"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check9" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic9"
                    android:background="@mipmap/p09reading"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check10" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic10"
                    android:background="@mipmap/p10concert"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check11" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic11"
                    android:background="@mipmap/p11festival"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check12" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic12"
                    android:background="@mipmap/p12travel"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check13" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic13"
                    android:background="@mipmap/p13rest"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check14" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic14"
                    android:background="@mipmap/p14tour"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check15" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic15"
                    android:background="@mipmap/p15beach"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check16" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic16"
                    android:background="@mipmap/p16mountain"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check17" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic17"
                    android:background="@mipmap/p17owncar"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check18" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic18"
                    android:background="@mipmap/p18bycicle"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check19" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic19"
                    android:background="@mipmap/p19publictransit"
                    android:layout_marginRight="10dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/posting_check20" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/posting_pic20"
                    android:background="@mipmap/p20cruise"
                    android:layout_marginRight="10dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/imageView31"
            android:background="#000000"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Letter"
            android:id="@+id/textView10"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000000" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="161dp"
            android:id="@+id/scrollView3"
            android:layout_weight="0.16"
            android:background="#faf7f7">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/posting_letter"
                android:gravity="top"
                android:background="@null"
                android:autoText="false"
                android:textSize="25dp"
                android:text="content"
                android:height="161dp" />
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="right">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/posting_cancel"
                android:layout_gravity="right"
                android:onClick="onClickCancel" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write"
                android:onClick="onClickPost"
                android:id="@+id/posting_write" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>