<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="fill_parent"
    android:id="@+id/custom_root_layout"
    android:layout_gravity="center"
    android:background="@color/white"
    android:weightSum="1">

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Filter"
        android:textColor="@color/black"
        android:textSize="30sp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="30"
            android:gravity="center"
            android:text="Destination"
            android:id="@+id/findword_text"
            android:background="@color/white"
            android:textSize = "24sp"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="40.99"
            android:id="@+id/find_word"
            android:background="#e7e7e7"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="DATE"
            android:id="@+id/find_date_text"
            android:textSize = "24sp"
            android:textColor="@color/black"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="40.27"
            android:id="@+id/custom_button_startdate"
            android:background="@color/white"
            android:text="No matter" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_weight="1.43"
            android:gravity="center"
            android:text="~"
            android:id="@+id/textView23"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:background="#ffffff" />

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="70"
            android:id="@+id/custom_button_lastdate"
            android:background="#ffffff"
            android:text="No matter" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/custom_button_cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="50"
            android:textSize="25sp"
            android:text="Cancel"
            android:textColor="@color/black"
            android:background="#00ff0000"/>

        <Button
            android:id="@+id/custom_button_find"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="50"
            android:textSize="25sp"
            android:text="FIND"
            android:textColor="@color/black"
            android:background="#00ff0000"/>
    </LinearLayout>


</LinearLayout>